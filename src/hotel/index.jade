extends ../_layouts/base
include ../_modules/carouselslick/carouselSlick
include ../_modules/map/map
include ../_modules/hotelcard/hotelcard

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
  main._page._hotel
    section._head.-pattern
      .container
        .row
          .col-xs-24.col-md-16
            h1!= site.data.hotel.name
            h2!= site.data.hotel.city + ', ' + site.data.hotel.country
          .col-xs-24.col-md-8
            img._category.pull-right(src="../images/hotel/category.png")
          .col-xs-24._top
            +carouselSlick('hotel','gallery',site.data.hotel.carousel,3,1)
          .col-xs-24._desc
            p!= site.data.hotel.description

    section.container._hotelInfo
      .row
        each val in site.data.hotel.hotelInfo
          .col-xs-24.col-md-8
            h3!= val.title
            ul
              each item in val.items
                li!= item.name
        .col-xs-24.col-md-8
          ul._features
            li
              i.fa.fa-bed
              | 32 Habitaciones
            li
              i.fa.fa-usd
              span.fa.fa-usd
              span.fa.fa-usd
              span.fa.fa-usd
              span.fa.fa-usd
            li
              i.fa.fa-plane
              ul
                li 60 min Calama Airport
                li 5 min San Pedro de Atacama
            li
              span._logoicon
                img.-negative(src="../images/BBH-logo.svg")
              | Miembro desde
              span.-bold 2012

      .row._promos
        .col-xs-24.col-md-12.-plain
          a._benefitBanner.-BBH(href="javascript:void(0)")
            span._medal
            p._text
              span._title Mencionando a TheBBH al hacer la reserva accede a: 
              span._description Upgrade sujeto a disponibilidad y un baño relajante con sales de la Bodega Algodón
            
        .col-xs-24.col-md-12.-moreInfo
          a._benefitBanner.-city(href="javascript:void(0)")
            img.city-logo(src="/images/logo-city.svg")
            p._text
              span._title Beneficios exclusivos <b>City Gold</b> 
              span._description 20% off <b>+ tratamiento vip</b>
              span._moreInfo
                span
                  i.fa.fa-plus
                span info
                
      .row._promos-more-info
        .col-xs-24.col-md-10.pull-left
          img._city-logo(src="/images/logo-city-gold.png")
          p Citigold Boutique Hotel Program (1) es el programa más exclusivo para clientes Citigold que le brinda excepcionales privilegios en los hoteles boutique más selectos de Latinoamerica pertenecientes a la colección de pequeños hoteles TheBBH.
          ul._tabSelector
            li.-active(data-tab="_elite")
              | Citygold &reg; Elite
            li(data-tab="_premium")
              | Citygold &reg; Premium
        .col-xs-24.col-md-14.pull-right._tabContainer
          .tab.-active(data-target="_elite")
            h3
              |Como cliente&nbsp;
              span.-bold Citigold ®,&nbsp;
              |usted será un invitado especial y podrá disfrutar de los siguientes beneficios:
            ul
              li
                h4 Experiencia Boutique (3)
                p Dentro de su estadía usted podrá disfrutar de una experiencia boutique única como cooking class, degustaciones regionales, Thai Massage, entre otros. Cada hotel boutique lo sorprenderá con una propuesta diferente.
              li
                h4 Up grade de habitación garantizada (2)
                p Usted obtendrá una habitación superior, al precio de una inferior con una tarifa preferencial sobre tarifa mostrador.
              li
                h4 Late check-out garantizado (4) hasta las 2 pm.
                p Garantizado hasta las 2.00 pm.
              li
                h4 Desayuno Boutique sin cargo con horario extendido
                p Usted podrá disfrutar de su desayuno en cualquier espacio común del hotel o en su habitación hasta las 12.00 pm.
              li
                h4 6 cuotas sin interés (5)
                p Para brindarle mayor flexibilidad usted podrá optar por abonar hasta en 6 cuotas sin interés

          .tab(data-target="_premium")
            h3
              |Como cliente&nbsp;
              span.-bold Citigold® Premium,&nbsp;
              |usted será un invitado especial y podrá disfrutar de los siguientes beneficios:
            ul
              li
                h4 Tarifa preferencial (4)
                p Usted obtendrá una tarifa preferencial sobre tarifa mostrador.
              li
                h4  Late check-out garantizado
                p  Garantizado hasta las 2.00 pm.
              li
                h4  Desayuno Boutique sin cargo con horario extendido
                p  Usted podrá disfrutar de su desayuno en cualquier espacio común del hotel o en su habitación hasta las 12.00 pm.
              li
                h4 6 cuotas sin interés (5)
                p Para brindarle mayor flexibilidad usted podrá optar por abonar hasta en 6 cuotas sin interés.

        .col-xs-24.col-md-8
          p.small * Deberá identificarse como cliente Citigold Premium presentando en mostrador su tarjeta de débito, MasterCard Platinum, Visa Platinum abonar un mínimo de estadía de dos noches en el mismo hotel y realizar la reserva en forma directa con el hotel.
            a(href="http://goo.gl/YwQT8") Si usted no es cliente de Citygold haga click aquí (6)
            a(href="http://goo.gl/QKO8Q") Ver legales

      .row
        .col-xs-24
          h2._heading
            | ¿Dónde está
            span.-bold= ' ubicado?'

          button.button._mapToggle
            span
            i.fa.fa-chevron-up

          .row
            .col-xs-24
              +map()

    section._hotels
      .container
        .row
          .col-xs-24
            h2._heading
              | OTROS HOTELES CON EMOCIÓN EN
              span.-bold  ATACAMA
          each val in site.data.hotel.hotels
            .col-xs-24.col-md-8.col-lg-6
              +hotelcard(val,'compact')

          .col-xs-24._showMore
            p
              span Más Hoteles
            a(href="#")
              i.fa.fa-chevron-down
